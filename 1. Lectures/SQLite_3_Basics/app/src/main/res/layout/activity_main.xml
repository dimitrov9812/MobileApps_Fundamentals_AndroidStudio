<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="editName"
        android:inputType="textPersonName"
        android:hint="Enter your name"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="editPhone"
        android:inputType="phone"
        android:hint="Enter your phone number"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="editEmail"
        android:inputType="textEmailAddress"
        android:hint="Enter your name"></EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="btnInsert"
        android:text="Enter"></Button>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="simpleList"
        android:minHeight="400dp"></ListView>

</LinearLayout>